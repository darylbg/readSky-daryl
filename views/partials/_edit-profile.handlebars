<section class="edit-details-wrapper">
<h1>Edit my details</h1>
<form id="profile-form" data-id="{{user_id}}">
  <label id="form-label" for="" value="{{user.id}}"></label>
  <input type="hidden" name="_method" value="PUT">
  <label for="first_name">First Name:</label>
  <input type="text" id="profile-first_name" name="first_name" value="{{user.first_name}}">
  <br>
  <label for="last_name">Last Name:</label>
  <input type="text" id="profile-last_name" name="last_name" value="{{user.last_name}}">
  <br>
  <label for="username">Username:</label>
  <input type="text" id="profile-username" name="username" value="{{user.username}}">
  <br>
  <label for="email">Email:</label>
  <input type="email" id="profile-email" name="email" value="{{user.email}}">
  <br>
  <label for="password">Password:</label>
  <input type="password" id="profile-password" name="password" value="{{user.password}}">
  <br>
  <button id="submit-button" type="submit">Update</button>
</form>
</section>
